<header class="header">
	<a href="#test">
		{{> logo}}
	</a>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{> nav list=header}}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
		<div class="info">
			<h1 class="info_title">{{title}}</h1>
			<p class="info_text">{{description}}</p>
		</div>
	{{/with}}
	
	{{#with form}}
		<form class="form">
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form_input_{{id}}">
				{{/each}}
			</div>
			<div class="form_checkbox">
				<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
				<div></div>
				<label for="{{checkbox.name}}">{{checkbox.label}}</label>
			</div>
			<button type="submit" class="form_button">{{button}}</button>
			<div class="form_bot"></div>
			<p class="form_info">{{info}}</p>
		</form>
	{{/with}}
</main>

<div class="updates">
	{{#with updates}}
		<h1 class="updates_title">{{title}}</h1>
		{{#each list}}
			<div class="updates_list">
				<img src="https://picsum.photos/32/32" alt="Updates image" class="updates_image">
				<div class="upd_list">
					<strong class="list_name">{{nickname}}</strong>
					<p class="list_text">{{description}}</p>
				</div>
			</div>
		{{/each}}
		<a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
		<h3>{{title}}</h3>
		<span>{{badge}}</span>
		<div class="expirience_list">
			{{#each list}}
				<div class="expirience_content">
					<strong>{{name}}</strong>
					<p>{{details}}</p>
				</div>
			{{/each}}
		</div>
	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>